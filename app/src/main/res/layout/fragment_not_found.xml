<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/not_found_user_info_tv"
        style="@style/TitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="헤당 정보로 등록된 회원정보가\n 없습니다."
        android:textColor="@color/main_black"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/not_found__icon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="46.2dp"
        />

    <ImageView
        android:id="@+id/not_found__icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/not_found_user_info_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/not_found_signup_btn"
        style="@style/BtnMid"
        android:layout_width="270dp"
        android:layout_height="45.3dp"
        android:text="회원가입하러 하기"
        android:textColor="@color/blue_dark_1"
        android:background="@drawable/blue_rectangle"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/not_found_user_info_tv"
        android:layout_marginTop="47dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>