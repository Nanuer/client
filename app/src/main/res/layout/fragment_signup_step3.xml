<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/signup_step3_tv"
        style="@style/MainPont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력해주세요"
        android:textColor="@color/black_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="68dp"
        android:layout_marginStart="55dp"
        />

    <EditText
        android:id="@+id/signup_pw_et"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@null"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_step3_tv"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="34dp"
        />

    <View
        android:id="@+id/signup_pw_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/gray_gray_4"
        app:layout_constraintEnd_toEndOf="@+id/signup_pw_et"
        app:layout_constraintStart_toStartOf="@+id/signup_pw_et"
        app:layout_constraintTop_toBottomOf="@+id/signup_pw_et"/>

    <ImageView
        android:id="@+id/signup_hide_icon_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/hide"
        app:layout_constraintBottom_toBottomOf="@+id/signup_pw_et"
        app:layout_constraintEnd_toEndOf="@+id/signup_pw_et"
        app:layout_constraintTop_toTopOf="@+id/signup_pw_et" />


    <TextView
        android:id="@+id/signup_pw_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영어, 숫자를 포함하여 8글자\n이상이어야해요"
        android:gravity="right"
        android:textColor="@color/gray_gray_2"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/signup_pw_et"
        app:layout_constraintEnd_toStartOf="@id/singup_pw_info_icon_iv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        />

    <ImageView
        android:id="@+id/singup_pw_info_icon_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/wrong_blue"
        app:layout_constraintTop_toBottomOf="@id/signup_pw_et"
        app:layout_constraintEnd_toEndOf="@id/signup_pw_et"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>