<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="11dp"
    android:paddingBottom="17dp"
    android:paddingHorizontal="22dp">

    <ImageView
        android:id="@+id/chat_list_item_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/chat_list_item_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자1"
        app:layout_constraintStart_toEndOf="@id/chat_list_item_profile_iv"
        app:layout_constraintTop_toTopOf="@id/chat_list_item_profile_iv"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/chat_list_item_chatting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        app:layout_constraintStart_toEndOf="@id/chat_list_item_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/chat_list_item_profile_iv"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/chat_list_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="써브웨이 배달 시키신분"
        app:layout_constraintStart_toEndOf="@id/chat_list_item_username_tv"
        app:layout_constraintTop_toTopOf="@id/chat_list_item_profile_iv"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/chat_list_minute_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8분전"
        app:layout_constraintBottom_toBottomOf="@id/chat_list_item_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>