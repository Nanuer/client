<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/message_tv"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="@color/gray_gray_1"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="아이디를 잊으셨나요?\n
    회원가입시 입력한 아래의 정보를 입력해 주세요"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="32dp"
        />

    <EditText
        android:id="@+id/message_number_tv"
        style="@style/MinPont"
        android:layout_width="210dp"
        android:layout_height="37dp"
        android:hint="휴대폰 번호 입력 ( ‘ - ’ 제외 )"
        android:inputType="text"
        android:background="@drawable/gray_line"
        app:layout_constraintTop_toBottomOf="@id/message_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="32dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_number_tv"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/orange_round"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.03"
        android:textColor="#ff6b00"
        android:textSize="11.3sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/message_number_tv"
        app:layout_constraintTop_toBottomOf="@id/message_tv"
        android:text="재전송" />

    <EditText
        android:id="@+id/ct_number_tv"
        style="@style/MinPont"
        android:layout_width="228dp"
        android:layout_height="37dp"
        android:hint="인증번호 6자리 입력"
        android:inputType="text"
        android:background="@drawable/gray_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_number_tv"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="35dp"/>

    <ImageView
        android:id="@+id/btn_small_check_iv"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_small_check"
        app:layout_constraintStart_toEndOf="@id/ct_number_tv"
        app:layout_constraintTop_toBottomOf="@id/send_number_tv"
        />

    <TextView
        android:id="@+id/ct_message_tv"
        style="@style/Tip"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:text="인증번호를 받지 못하셨나요?\n
휴대폰 번호 확인 후 ‘재전송’ 버튼을 눌러주세요"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="34dp"
        app:layout_constraintTop_toBottomOf="@id/ct_number_tv"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_id_button_tv"
        style="@style/BtnPont"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:text="아이디 찾기"
        android:includeFontPadding="false"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/ct_message_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/blue_button_on"/>

</androidx.constraintlayout.widget.ConstraintLayout>