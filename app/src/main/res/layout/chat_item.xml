<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="21dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/chat_item_profile_iv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="@id/chat_item_chatting_tv"
        app:layout_constraintBottom_toBottomOf="@id/chat_item_chatting_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chat_item_chatting_tv"
        style="@style/TipSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅내용입니다."
        android:textColor="@color/main_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_item_profile_iv"
        android:layout_marginStart="16dp"
        android:background="@drawable/gray_round"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 1:32"
        app:layout_constraintStart_toEndOf="@id/chat_item_chatting_tv"
        app:layout_constraintBottom_toBottomOf="@id/chat_item_chatting_tv"
        android:layout_marginStart="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>