<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:id="@+id/list_header_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">

            <ImageView
                android:id="@+id/list_bachelor_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bachelor_cap"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/list_uni_tv"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_bachelor_iv"
                android:gravity="center_horizontal"
                android:layout_marginStart="9dp"
                android:text="인하대"
                android:textColor="@color/main_black" />

            <ImageView
                android:id="@+id/list_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/list_bell_iv"
                android:src="@drawable/search"
                android:layout_marginEnd="23dp"/>

            <ImageView
                android:id="@+id/list_bell_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:src="@drawable/bell" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_header_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_header_rl"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">

            <TextView
                android:id="@+id/list_number_tv"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 25건"
                android:textColor="@color/main_black"/>

            <TextView
                style="@style/Regular"
                android:id="@+id/list_class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/list_down_iv"/>

            <ImageView
                android:id="@+id/list_down_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/down_list"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_header_rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_header_rl2"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/gray_line">

            <ImageView
                android:id="@+id/list_filter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/filter"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/list_category_tv"
                style="@style/TipSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/list_filter"
                android:text="카테고리" />

            <ImageView
                android:id="@+id/list_check_on_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_on"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/list_hide_tv"/>

            <TextView
                android:id="@+id/list_hide_tv"
                style="@style/BtnSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="모집마감 안보기"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/list_item"
            app:layout_constraintTop_toBottomOf="@id/list_header_rl3"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
