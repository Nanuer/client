<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="8dp"
    android:background="@drawable/chat_user_item_unselected"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/chat_user_item_profile_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/chat_user_item_username_tv"
        style="@style/TipSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/chat_user_item_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/chat_user_item_profile_iv"
        app:layout_constraintStart_toEndOf="@id/chat_user_item_profile_iv"
        android:text="사용자1"
        android:textColor="@color/main_black"/>

</androidx.constraintlayout.widget.ConstraintLayout>