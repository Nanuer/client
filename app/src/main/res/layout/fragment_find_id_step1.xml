<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_id_step1_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/find_id_step1_message_tv"
            style="@style/TipSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_gray_1"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="아이디 (이메일)를 잊으셨나요?\n회원가입시 입력한 아래의 정보를 입력해 주세요"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            />

        <EditText
            android:id="@+id/find_id_step1_name_et"
            style="@style/InputMid"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="37dp"
            android:layout_marginHorizontal="35dp"
            android:hint="이름"
            android:inputType="text"
            android:includeFontPadding="false"
            android:paddingHorizontal="9dp"
            android:background="@drawable/textline_bottom_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_message_tv" />

        <RelativeLayout
            android:id="@+id/find_id_step1_phone_number_rl"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_name_et"
            android:layout_marginHorizontal="35dp">

                <EditText
                    android:id="@+id/find_id_step1_phone_number_et"
                    style="@style/InputMid"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@id/find_id_step1_phone_number_void_btn"
                    android:background="@drawable/textline_bottom_gray"
                    android:hint="휴대폰 번호 (숫자만 입력)"
                    android:inputType="text"
                    android:paddingHorizontal="9dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_phone_number_void_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_send_number_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/gray_round"
                    android:text="인증번호"
                    android:textColor="@color/gray_light_2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_resend_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/orange_round"
                    android:textColor="#ff6b00"
                    android:visibility="gone"
                    android:text="재전송" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/find_id_step1_certification_code_rl"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_phone_number_rl"
            android:layout_marginHorizontal="35dp"
            android:visibility="gone">

                <EditText
                    android:id="@+id/find_id_step1_certification_code_et"
                    style="@style/InputMid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@id/find_id_step1_certification_code_void_btn"
                    android:background="@drawable/textline_bottom_gray"
                    android:hint="인증번호 입력"
                    android:inputType="text"
                    android:paddingHorizontal="9dp"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_certification_code_void_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_okay_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/gray_round"
                    android:text="확인"
                    android:textColor="@color/gray_light_2"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_correct_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/blue_rectangle"
                    android:text="인증완료"
                    android:textColor="@color/blue_dark_1"
                    android:visibility="gone"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/find_id_step1_not_correct_btn"
                    style="@style/BtnSmall"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/red_round"
                    android:text="인증실패"
                    android:textColor="@color/main_red"
                    android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/find_id_step1_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TipSmall"
            android:freezesText="false"
            android:text="남은시간 3:00"
            android:textColor="@color/main_red"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_certification_code_rl"
            app:layout_constraintStart_toStartOf="@id/find_id_step1_certification_code_rl"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:layout_marginStart="9dp"
            />

        <TextView
            android:id="@+id/find_id_step1_resend_message_tv"
            style="@style/TipSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호를 받지 못하셨나요?\n휴대폰 번호 확인 후 '재전송' 버튼을 눌러주세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_timer"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_id_step1_find_btn"
            style="@style/BtnLarge"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:text="아이디 찾기"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_resend_message_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="66dp"
            android:background="@drawable/blue_button"/>
        />
</androidx.constraintlayout.widget.ConstraintLayout>