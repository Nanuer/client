<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/find_id_step1_message_tv"
            style="@style/Tip"
            android:layout_width="291dp"
            android:layout_height="39dp"
            android:textColor="@color/gray_gray_1"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="아이디를 잊으셨나요?\n회원가입시 입력한 아래의 정보를 입력해 주세요"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            />

        <EditText
            android:id="@+id/find_id_step1_phone_number_et"
            style="@style/MinPont"
            android:layout_width="210dp"
            android:layout_height="37dp"
            android:hint="휴대폰 번호 입력 ( ‘ - ’ 제외 )"
            android:inputType="text"
            android:background="@drawable/gray_line"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_message_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/find_id_step1_send_number_btn"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_id_step1_send_number_btn"
            style="@style/BtnPontSmall"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:background="@drawable/blue_rectangle"
            android:gravity="center"
            android:textColor="@color/blue_main_2"
            app:layout_constraintStart_toEndOf="@id/find_id_step1_phone_number_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/find_id_step1_phone_number_et"
            app:layout_constraintBottom_toBottomOf="@id/find_id_step1_phone_number_et"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="인증번호 전송" />

        <EditText
            android:id="@+id/find_id_step1_identify_number_et"
            style="@style/MinPont"
            android:layout_width="228dp"
            android:layout_height="37dp"
            android:hint="인증번호 6자리 입력"
            android:inputType="text"
            android:background="@drawable/gray_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/find_id_step1_okay_et"
            app:layout_constraintTop_toBottomOf="@id/find_id_step1_phone_number_et"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_id_step1_okay_et"
            style="@style/BtnPontSmall"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_round"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/find_id_step1_identify_number_et"
            app:layout_constraintTop_toTopOf="@id/find_id_step1_identify_number_et"
            app:layout_constraintBottom_toBottomOf="@id/find_id_step1_identify_number_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="확인" />

