<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/find_message_tv"
        style="@style/MidPont"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="150dp"
        android:includeFontPadding="false"
        android:text="아이디 /비밀번호 찾기"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delete_logo_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete_logo_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:baseline="30dp"
        android:src="@drawable/x"
        app:layout_constraintBottom_toBottomOf="@+id/find_message_tv"
        app:layout_constraintEnd_toStartOf="@+id/find_message_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/find_message_tv" />

    <TextView
        android:id="@+id/find_id_tv"
        style="@style/MidPont"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:text="아이디 찾기"
        android:background="@drawable/blue_line"
        android:textColor="#0085ff"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/delete_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/find_pw_tv"
        style="@style/MidPont"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:text="비밀번호 찾기"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/delete_logo_iv"
        app:layout_constraintStart_toEndOf="@id/find_id_tv"
        />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="@color/gray_gray_1"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        tools:text="아이디를 잊으셨나요?\n
회원가입시 입력한 아래의 정보를 입력해 주세요"
        app:layout_constraintTop_toBottomOf="@id/find_id_tv"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="32dp"
        />

    <TextView
        android:id="@+id/message_number"
        style="@style/MinPont"
        android:layout_width="210dp"
        android:layout_height="37dp"
        tools:text="휴대폰 번호 입력 ( ‘ - ’ 제외 )"
        android:background="@drawable/gray_line"
        app:layout_constraintTop_toBottomOf="@id/message_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="45dp"/>

    <TextView
        android:id="@+id/send_number_tv"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textStyle="normal"
        android:textSize="11.3sp"
        android:textColor="#0066ff"
        android:letterSpacing="-0.03"
        android:gravity="center_horizontal"
        tools:text="인증번호 전송"
        android:background="@drawable/blue_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_tv"
        android:layout_marginLeft="252dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/ct_number_tv"
        style="@style/MinPont"
        android:layout_width="260dp"
        android:layout_height="37dp"
        tools:text="인증번호 6자리 입력"
        android:background="@drawable/gray_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_number_tv"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="45dp"/>

    <TextView
        android:id="@+id/okay_tv"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textStyle="normal"
        android:textSize="11.3sp"
        android:textColor="@color/gray_gray_1"
        android:letterSpacing="-0.03"
        android:gravity="center_horizontal"
        tools:text="확인"
        android:background="@drawable/gray_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_number_tv"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="27dp"/>

    <TextView
        android:id="@+id/find_id_button_tv"
        style="@style/BtnPont"
        android:layout_width="290dp"
        android:layout_height="43dp"
        tools:text="아이디 찾기"
        android:includeFontPadding="false"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/okay_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/blue_button"/>
    


</androidx.constraintlayout.widget.ConstraintLayout>