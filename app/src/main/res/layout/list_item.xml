<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/list_post_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_line">

                        <TextView
                            style="@style/TipSmall"
                            android:id="@+id/list_post_category_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="브런치" />

                        <TextView
                            style="@style/TipSmall"
                            android:id="@+id/list_post_minute_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="5분전"/>


                        <TextView
                            android:id="@+id/list_post_title_tv"
                            style="@style/Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/list_post_category_tv"
                            android:text="써브웨이 같이 배달 시키실분 구해요"
                            android:textColor="@color/main_black" />

                        <TextView
                            android:id="@+id/list_post_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/list_post_title_tv"
                            android:text="오늘 오후 7시" />

                        <TextView
                            android:id="@+id/list_post_distance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/list_post_title_tv"
                            android:layout_toLeftOf="@id/list_post_heart_off_tv"
                            android:text="내 위치에서 50M"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:id="@+id/list_post_heart_off_tv"
                            android:layout_width="25dp"
                            android:layout_height="21dp"
                            android:src="@drawable/heart"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/list_post_title_tv"/>

                    </RelativeLayout>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>